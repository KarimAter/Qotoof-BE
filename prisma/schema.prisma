generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Beneficiary {
  id      Int       @id @default(autoincrement())
  name    String    @unique
  Expense Expense[]
}

model Donor {
  id       Int        @id @unique @default(autoincrement())
  name     String     @unique
  referral User       @relation(fields: [userId], references: [id])
  Donation Donation[]
  userId   Int
}

model Donation {
  id       Int              @id @unique @default(autoincrement())
  amount   Float
  category DonationCategory
  donor    Donor            @relation(fields: [donorId], references: [id]) // fields the foregin key, reference the model key
  donorId  Int              @default(0)
}

model User {
  id       Int       @id @unique @default(autoincrement())
  name     String
  email    String?
  password String?
  role     UserRole
  Expense  Expense[]
  Donor    Donor[]
}

model Expense {
  id            Int              @id @unique @default(autoincrement())
  date          DateTime?
  amount        Float
  incategory    DonationCategory
  outcategory   ExpenseCategory
  status        String?
  paymentType   String?
  comment       String?
  project       String?
  user          User             @relation(fields: [userId], references: [id])
  beneficiary   Beneficiary      @relation(fields: [beneficiaryId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId        Int
  beneficiaryId Int
}

enum UserRole {
  SUPER
  ADMIN
  EDITOR
  GUEST
}

enum ExpenseCategory {
  Medication
  Treatment
  MedicalAid
  Marriage
  Projects
  Meat
  Adahy
  Bags
  Chicken
  Transportation
  HousingProject
  LoansSettling
  Meals
  Mosque
  WaterPipes
  ZakatFitr
}

enum DonationCategory {
  General
  Zakat
  Pharmacy
  Meat
  Chicken
  Fruits
  Bags
  Meal
  Food
  Clothes
  Hospital
  Mosque
  Logistics
  Loans
  Housing
  WaterPipes
  Marriage
  ZakatFitr
  TemporaryAid
  MonthlyAid
  Orphans
  Treatment
  Projects
  Other
}
